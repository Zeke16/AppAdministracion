@page
@model RegisterModel
@{
    ViewData["Title"] = "Crear nuevo usuario";
}
<section class="d-flex justify-content-center">
    <div class="col-md-10 border border-primary p-5 mt-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="row">
                <div class="col-12 text-center">
                    <h2>Crear un nuevo usuario</h2>
                    <hr />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <label asp-for="Input.FullName"></label>
                        <input asp-for="Input.FullName" class="form-control" autocomplete="fullName" aria-required="true" placeholder="Nombre completo" />
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <label asp-for="Input.PhoneNumber">Apellidos</label>
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phoneNumber" aria-required="true" placeholder="Numero de telefono" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <label asp-for="Input.Email">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Input.Role">Rol</label>
                            <select class="form-control" asp-for="Input.Role"
                                asp-items="@(Model.Roles)">
                                <option>Seleccione un rol</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Input.Role">Rol</label>
                            <select class="form-control" asp-for="Input.Role"
                                asp-items="@(Model.Roles)">
                                <option>Seleccione un rol</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>
                    </div>
                }
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <label asp-for="Input.Password">Password</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-12 d-inline">
                    <button id="registerSubmit" type="submit" class="btn btn-warning">Crear registro</button>
                    &nbsp;
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger" asp-controller="Home" asp-action="IndexUsers">Regresar</a>
                    }else{
                        <a class="btn btn-danger" onclick="history.back()">Regresar</a>
                    }
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
