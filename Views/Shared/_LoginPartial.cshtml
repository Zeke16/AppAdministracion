@using Microsoft.AspNetCore.Identity
@using AppAdministracion.Data

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><i class="text-danger fas fa-sign-in-alt nav-icon"></i> Salir</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Login">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><i class="text-danger fas fa-reply nav-icon"></i> Login</button>
            </form>
        </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Register">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><i class="text-danger fas fa-user-plus nav-icon"></i> Crear cuenta</button>
                </form>
            </li>
    }
</ul>

